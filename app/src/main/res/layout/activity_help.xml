<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/activity_about_button_open_website"
        android:onClick="visitCodeCyprusWebsite"
        android:text="@string/codecyprus_dot_org_url"
        android:textColor="@color/pirate_red"
        android:drawableRight="@drawable/baseline_open_in_new_24"
        android:drawableEnd="@drawable/baseline_open_in_new_24"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <WebView
        android:id="@+id/activity_about_webview"
        android:layout_above="@id/activity_about_button_open_website"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>